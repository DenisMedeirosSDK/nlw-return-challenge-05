<html lang='pt-BR'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap'
      rel='stylesheet'
    />
  </head>
  <body>
    <div style='padding: 20px;'>
      <h1 style='font-size:24px; margin-bottom: 20px;'>Novo feedback de
        {{type}}
      </h1>
      <p style='margin-bottom: 20px;'>{{comment}}</p>

      {{#if isScreenshot}}
        <img
          style='width: auto; height: 480px; box-shadow: 0px 0px 8px 2px rgba(0, 0, 0, 0.25); border-radius: 4px;'
          src='{{screenshot}}'
          alt='{{type}}'
        />
      {{else}}

      {{/if}}
    </div>
  </body>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; } body { font-family:
    Roboto, sans-serif; font-size: 16px; color: #171717; }
  </style>
</html>